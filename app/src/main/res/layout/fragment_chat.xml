<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    tools:context=".app.ChatFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FFF"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/CompuserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Enter your Name"
            android:padding="10dp"
            android:textColorHint="#000"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/TextColor"
            android:textStyle="bold" />

        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/CompSpinner"
            android:layout_width="match_parent"
            android:textColorHint="#000"
            android:layout_height="wrap_content"
            android:entries="@array/entries"/>
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/CompEmail"
            android:textColorHint="#000"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/TextColor"
            android:hint="Enter your Email"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:textColorHint="#000"
            android:id="@+id/CompContactNo"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/TextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Contact No"
            android:textColor="#000000"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/CompSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:text="Submit"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</FrameLayout>